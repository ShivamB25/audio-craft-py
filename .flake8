[flake8]
max-line-length = 88
extend-ignore = E203,E501,W503,F401,F403
exclude = 
    .venv,
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.log,
    .DS_Store,
    docs/
per-file-ignores =
    __init__.py:F401,F403
    src/__init__.py:F401,F403
    src/models/__init__.py:F401,F403
    src/services/__init__.py:F401,F403
    src/controllers/__init__.py:F401,F403